@model ProfTestium.Models.ViewModels.TestViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Удаление теста</h3>

<h4>Вы уверены что хотите удалить этот тест?</h4>
<p></p>
@foreach (var question in Model.Questions)
{
    <h5>@question.Title</h5>

    <ul>
        @foreach (var answer in question.Answers)
        {
            <li>
                @if (answer.Correct)
                {
                    <strong>@answer.Title</strong>
                }
                else
                {
                    @answer.Title
                }
            </li>
        }
    </ul>
}
    
<form class="form-group btn-group" asp-action="Delete">
    <input type="hidden" asp-for=@Model.Test.Id />
    <input type="submit" value="Удалить" class="btn btn-danger" />
    <a class="btn btn-sm btn-outline-info" asp-action="Index">Вернуться к списку</a>
</form>

